  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "cd src && cp **/*.html --parents ../dist",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "pretest": "npm run lint",
