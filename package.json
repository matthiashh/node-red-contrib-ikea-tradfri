  "author": "Michael de Wit <mjwwit@gmail.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=12.9"
  },
  "engineStrict": true,
  "dependencies": {
    "node-tradfri-client": "^2.1.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14",
    "@types/node-red": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "node-red": "^1.2.6",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "keywords": [
    "node-red"
  ],
  "node-red": {
    "nodes": {
      "tradfri-config": "dist/tradfri-config-node/tradfri-config.js",
      "tradfri-light-control": "dist/tradfri-light-control-node/tradfri-light-control.js",
      "tradfri-status": "dist/tradfri-status-node/tradfri-status.js"
