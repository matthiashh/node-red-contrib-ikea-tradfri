{
  "compilerOptions": {
    "strict": true,
    "strictBindCallApply": false,
    "removeComments": false,
    "newLine": "LF",
    "pretty": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "ES2018", "ES2020.Promise", "ES2019.Array"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
